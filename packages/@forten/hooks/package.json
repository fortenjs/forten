{
  "name": "@forten/hooks",
  "version": "0.0.0",
  "description": "Support for callable hooks in actions (through effects).",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fortenjs/forten.git"
  },
  "author": "Maia Taewana <maia@pawijs.org>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc -p setup/tsconfig.${NODE_ENV:=development}.json",
    "postbuild": "cp package.json ../../node_modules/@forten/hooks",
    "prepare": "rimraf dist && cp -r ../../node_modules/@forten/hooks/dist dist",
    "clean": "rimraf .cache dist coverage ../../node_modules/@forten/hooks",
    "test": "jest -c setup/jest.js",
    "test:watch": "jest -c setup/jest.js --watch --coverage false"
  },
  "dependencies": {
    "@forten/build": "next"
  },
  "devDependencies": {}
}