{
  "name": "@forten/editor",
  "version": "0.0.0",
  "description": "WYSIWYG editor",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fortenjs/forten.git"
  },
  "author": "Maia Taewana <maia@fortenjs.org>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc -p setup/tsconfig.${NODE_ENV:=development}.json",
    "postbuild": "cp package.json ../../node_modules/@forten/editor",
    "prepare": "rimraf dist && cp -r ../../node_modules/@forten/editor/dist dist",
    "clean": "rimraf .cache dist coverage ../../node_modules/@forten/editor",
    "stories": "webpack-dev-server --config=./setup/stories.webpack.js --port 8888 --mode development --hot --inline",
    "-- coverage tests are super slow. Only run when needed --": "",
    "test": "jest -c setup/jest.js --coverage false",
    "test:coverage": "jest -c setup/jest.js",
    "test:watch": "jest -c setup/jest.js --watch --coverage false"
  },
  "dependencies": {
    "@forten/build": "next",
    "@forten/dragdrop": "next",
    "@forten/hooks": "next",
    "@forten/locale": "next",
    "@forten/styled": "next",
    "@forten/shortcuts": "next",
    "@forten/theme": "next",
    "@forten/useragent": "next",
    "clipboard-polyfill": "^3.0.1",
    "clipboard-js": "^0.3.6"
  },
  "devDependencies": {
    "@forten/story": "next"
  }
}