    "test": "jest -c setup/jest.js",
    "test:watch": "jest -c setup/jest.js --watch --coverage false"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@forten/build": "next",
    "@forten/editor": "next",
    "@forten/locale": "next",
    "@forten/theme": "next",
    "@forten/styled": "next",
    "codemirror": "^5.58.0"
  },
  "devDependencies": {
    "@forten/story": "next",
    "@types/codemirror": "0.0.98"
  }
}