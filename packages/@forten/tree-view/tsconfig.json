{
  "compilerOptions": {
    "lib": [
      "es6",
      "es7",
      "esnext",
      "dom"
    ],
    "target": "ES6",
    "module": "CommonJS",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "test": [
        "src/test"
      ]
    },
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/stories",
    "**/*.test.ts",
    "node_modules",
    "dist"
  ]
}