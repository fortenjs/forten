{
  "name": "forten-monorepo",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "repo-cooker --build",
    "checkdeps": "repo-cooker --check-dependencies",
    "clean": "repo-cooker clean",
    "commit": "git-cz",
    "commitmsg": "cz-customizable-ghooks",
    "devtools": "npx overmind-devtools",
    "fixdeps": "repo-cooker --fix-dependencies",
    "format": "npm run lint -- --fix && prettier --write --with-node-modules \"**/*.md\" \"**/*.css\" \"**/*.json\"",
    "install": "npm run link",
    "link": "repo-cooker --link",
    "release": "repo-cooker --release",
    "test": "repo-cooker test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fortenjs/forten.git"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.30",
    "@fortawesome/free-regular-svg-icons": "5.14.0",
    "@fortawesome/free-solid-svg-icons": "5.14.0",
    "@fortawesome/react-fontawesome": "0.1.11",
    "@tippyjs/react": "4.2.0",
    "bowser": "2.11.0",
    "classnames": "2.2.6",
    "clipboard-js": "0.3.6",
    "clipboard-polyfill": "3.0.1",
    "codemirror": "5.58.0",
    "dexie": "3.0.2",
    "jest-styled-components": "7.0.3",
    "nanoid": "3.1.12",
    "overmind": "27.0.0",
    "overmind-react": "28.0.0",
    "parcel": "1.12.4",
    "polished": "3.6.7",
    "random-paragraph": "1.0.4",
    "react": "17.0.1",
    "react-dom": "16.13.1",
    "react-window": "1.8.6",
    "string-hash": "1.1.3",
    "styled-components": "5.2.0",
    "workbox-window": "5.1.4"
  },
  "devDependencies": {
    "@types/classnames": "2.2.10",
    "@types/codemirror": "0.0.98",
    "@types/node": "14.14.31",
    "@types/react": "16.9.49",
    "@types/react-dom": "16.9.8",
    "@types/react-test-renderer": "16.9.3",
    "@types/react-window": "1.8.2",
    "@types/simple-mock": "0.8.1",
    "@types/snowpack-env": "^2.3.3",
    "@types/styled-components": "4.0.1",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "4.14.1",
    "copyfiles": "2.4.1",
    "css-loader": "4.3.0",
    "cz-customizable": "^5.2.0",
    "cz-customizable-ghooks": "^1.5.0",
    "file-loader": "6.1.0",
    "html-webpack-plugin": "5.2.0",
    "jest": "26.6.3",
    "jest-styled-components": "7.0.3",
    "live-server": "1.2.1",
    "mini-css-extract-plugin": "0.11.2",
    "prettier": "2.1.2",
    "prettier-plugin-organize-imports": "^1.1.1",
    "react-test-renderer": "16.13.1",
    "repo-cooker": "^7.3.1",
    "rimraf": "3.0.2",
    "simple-mock": "0.8.0",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.17",
    "typescript": "4.2.3",
    "webpack": "5.24.3",
    "webpack-cli": "4.5.0",
    "webpack-dev-server": "3.11.0"
  },
  "repo-cooker-path": "./setup/repo-cooker",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "setup/commitizen.js"
    }
  }
}
